#include "Popup.hpp"

////////////////////////////////////////////////////////////
/// Default constructor
////////////////////////////////////////////////////////////
Popup::Popup()
{
    // Chargement de la texture du sol
    myGroundTexture = new sf::Image();
    myGroundTexture->LoadFromFile("../data/textures/ground.png");
    myGroundTexture->SetSmooth(false);
}

////////////////////////////////////////////////////////////
/// Virtual destructor
////////////////////////////////////////////////////////////
Popup::~Popup()
{
	popup->Close();
}

////////////////////////////////////////////////////////////
/// Virtual : Each Popup has to be displayed
////////////////////////////////////////////////////////////
int Popup::Display()
{
	return 0;
}

////////////////////////////////////////////////////////////
/// Display the background
////////////////////////////////////////////////////////////
void Popup::tondreLeGazon()
{
    // Affichage du sol
    sf::Sprite groundSprite;
    groundSprite.SetImage( *myGroundTexture );
    popup->Draw(groundSprite);
}

