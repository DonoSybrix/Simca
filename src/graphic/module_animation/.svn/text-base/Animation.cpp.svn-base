#include "Animation.hpp"

////////////////////////////////////////////////////////////
/// Default constructor
////////////////////////////////////////////////////////////
Animation::Animation()
{

}

////////////////////////////////////////////////////////////
/// Default destructor
////////////////////////////////////////////////////////////
Animation::~Animation()
{

}


////////////////////////////////////////////////////////////
/// Add frame in animation
////////////////////////////////////////////////////////////
void Animation::AddFrame( Frame &frame )
{
    myFrames.push_back( frame );
}

////////////////////////////////////////////////////////////
/// Get a frame
////////////////////////////////////////////////////////////
Frame& Animation::GetFrame( unsigned int number )
{
    if( number < 0 || number > myFrames.size() )
        return myFrames[ myFrames.size() - 1 ];

    return myFrames[number];
}

///////////////////////////////////////////////////////////
/// Get number of frame
////////////////////////////////////////////////////////////
unsigned int Animation::Size() const
{
    return myFrames.size();
}
